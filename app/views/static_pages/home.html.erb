<div class="center jumbotron">
	<h1>Welcome to Flash Cards</h1>
	<p>You have <strong><%= @cards.count %></strong> cards! Keep it up :) </p>
	<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
	  Add New Card
	</button>

	<!-- Modal -->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	    	<%= form_for(@card) do |f| %>
		    	<div class="modal-header">
		        	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		        	<h4 class="modal-title" id="myModalLabel">Add New Card</h4>
		      	</div>
	      
		    	<div class="modal-body">
		              <div class="form-group">
		                <%= f.label :front, class: "control-label pull-left" %>
		                <%= f.text_field :front, class: 'form-control' %>
		              </div>
		              <div class="form-group">
		              	<%= f.label :back, class: "control-label pull-left"  %>
      					<%= f.text_field :back , class: 'form-control'%>
		              </div>
		              <div class="form-group">
		                    <%= f.label :deck, class: "control-label pull-left" %>
		                   
		                   <%= f.collection_select :deck_id, Deck.all, :id, :name, :prompt => "Select a Deck" %>
		              </div>
		      	</div>
		      	<div class="modal-footer">
			        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			        <%= f.submit "Save Changes", class: "btn btn-primary" %>
		      	</div>
		    <% end %>
	    </div>
	  </div>
	</div>
</div>
<div class="row">
  <div class="col-md-3 col-md-offset-1">
  	<div class="panel panel-default">
  	  <!-- Default panel contents -->
  	  <div class="panel-heading">Decks</div>
  	  	<!-- List group -->
  	  	<ul class="list-group">
	  	  	<% @decks.each do |deck| %>
				<li class="list-group-item"><%= link_to deck.name, deck %></li>
			<% end %>
		</ul>

  	  <div class="panel-body">
	     <%= form_for(@deck) do |f| %>
	     <div class="form-group">
	       <%= f.label :name, class: 'control-label pull-left' %>
	       <%= f.text_field :name, class: 'form-control' %>
	     </div>
	  	 <%= f.submit "Add New Deck", class: "btn btn-primary" %>
	   <% end %>
  	  </div>
  	</div>
  </div><!--end col-md-5 -->
  <div class="col-md-7">
  	<h3>Cards</h3>
		<hr>
		<table class="table table-striped table-bordered">
		    <thead>
		   	    <tr> 
		   		    <th>#</th>
		   		    <th>Front</th>
		   		    <th>Deck</th>
		   	    </tr> 
			</thead>
			<% @cards.each do |card| %>
				<tbody> 
			       	<tr> 
			   	    	<th scope="row"><%= card.id %></th> 
			   	    	<td><%= link_to card.front, card %></td> 
			   	    	<td><%= link_to card.deck.name, card.deck %></td>
			   	   	 </tr> 
				</tbody>	
			<% end %>
		</table>
  </div>
</div>


