<% provide(:title, 'Add new Deck') %>
<h1>Add new Deck</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@deck) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.submit "Add New Deck", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>